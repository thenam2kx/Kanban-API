{
  "compilerOptions": {
    "target": "ES6",                       // Phiên bản ECMAScript để biên dịch
    "module": "commonjs",                  // Sử dụng module CommonJS
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",                   // Thư mục đầu ra sau khi biên dịch
    "rootDir": "./src",                    // Thư mục mã nguồn
    "strict": true,                        // Bật chế độ kiểm tra nghiêm ngặt
    "esModuleInterop": true,               // Hỗ trợ import ES module
    "skipLibCheck": true,                  // Bỏ qua kiểm tra kiểu trong thư viện
    "forceConsistentCasingInFileNames": true // Đảm bảo tính nhất quán trong tên file
  },
  "include": ["src/**/*.ts"],              // Bao gồm tất cả các file .ts trong thư mục src
  "exclude": ["node_modules"],              // Loại trừ thư mục node_modules
}
